<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <!-- You might have an existing AppTheme here. 
         If so, add the CalculatorButton styles below your existing theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Calculator Button Styles -->
    <style name="CalculatorButtonBase" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/calculator_button_background</item> <!-- General background -->
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CalculatorButton" parent="CalculatorButtonBase">
        <!-- Default button (numbers, dot) -->
        <item name="android:background">@drawable/calculator_button_digit_background</item>
        <item name="android:textColor">@color/calculator_digit_text_color</item>
    </style>

    <style name="CalculatorButton.Special" parent="CalculatorButtonBase">
        <!-- Special buttons (C, ⌫, %) -->
        <item name="android:background">@drawable/calculator_button_special_background</item>
        <item name="android:textColor">@color/calculator_special_text_color</item>
         <item name="android:textSize">20sp</item> <!-- C, % might be smaller -->
    </style>

    <style name="CalculatorButton.Operator" parent="CalculatorButtonBase">
        <!-- Operator buttons (+, -, ×, ÷, =) -->
        <item name="android:background">@drawable/calculator_button_operator_background</item>
        <item name="android:textColor">@color/calculator_operator_text_color</item>
    </style>




</resources> 