<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:titleTextColor="@android:color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Real-name Notification -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFBF0"
                android:padding="8dp"
                android:text="根据快件实名收寄的有关法律法规要求，您可在下单前实名认证或现场出示证件【立即实名】"
                android:textColor="#D9A44E"
                android:textSize="12sp" />

            <!-- Address Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Sender -->
                    <TextView
                        android:id="@+id/tv_sender_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="#E8F0FE"
                        android:gravity="center"
                        android:text="寄"
                        android:textColor="#3D7EFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_sender_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/tv_sender_icon"
                        android:text="新建寄件人"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_sender_address_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="地址簿"
                        android:textColor="@android:color/darker_gray" />

                    <!-- Divider -->
                    <View
                        android:id="@+id/divider_address"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_sender_label"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_toStartOf="@+id/btn_swap_address"
                        android:layout_toEndOf="@id/tv_sender_icon"
                        android:background="#F0F0F0" />

                    <ImageButton
                        android:id="@+id/btn_swap_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@android:drawable/stat_notify_sync" />


                    <!-- Recipient -->
                    <TextView
                        android:id="@+id/tv_recipient_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_below="@id/divider_address"
                        android:layout_marginTop="16dp"
                        android:background="#FFF1E8"
                        android:gravity="center"
                        android:text="收"
                        android:textColor="#FF8A48"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_recipient_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tv_recipient_icon"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/tv_recipient_icon"
                        android:text="新建收件人"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_recipient_address_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tv_recipient_label"
                        android:layout_alignParentEnd="true"
                        android:text="地址簿"
                        android:textColor="@android:color/darker_gray" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Other Options Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:showDividers="middle">
                    <!-- Expected Pickup Time -->
                    <RelativeLayout
                        android:id="@+id/layout_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="期望上门时间"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:drawablePadding="8dp"
                            android:text="今天09:00-10:00"
                            app:drawableEndCompat="@android:drawable/ic_media_play" />
                    </RelativeLayout>
                    <!-- Payment Method -->
                    <RelativeLayout
                        android:id="@+id/layout_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="付款方式"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:drawablePadding="8dp"
                            android:text="请选择"
                            app:drawableEndCompat="@android:drawable/ic_media_play" />
                    </RelativeLayout>
                    <!-- Courier Company -->
                    <RelativeLayout
                        android:id="@+id/layout_courier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="快递公司"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tv_courier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:drawablePadding="8dp"
                            android:text="顺丰快递"
                            app:drawableEndCompat="@android:drawable/ic_media_play" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="预估总价 ¥-- "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_place_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4C84FF"
            android:text="下单"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout> 